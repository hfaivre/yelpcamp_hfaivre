<% include ../partials/header %>



    
    <div class="row">
        <h1 style="text-align: center;">Edit <%=campground.name%></h1>
        <div style="width:30%; margin:25px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="campground[name]">Campground Name</label>
                    <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>"></input>
                </div>
                <div class="form-group">
                    <label for="campground[image]">Campground Image URL</label>
                    <input class="form-control" type="text" name="campground[image]" value="<%=campground.image%>"</input>
                </div>
                <div class="form-group">
                    <label for="campground[description]">Brief Campground Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" ><%=campground.description%></textarea>
                </div>
                 <div class="form-group">
                     <label for="campground[price]">Campground Rate</label>
                    <input class="form-control" type="number" name="campground[price]" value="<%=campground.price%>" min="0.00" ></input>
                </div>
                <div class="form-group">
                    <label for="campground[location]">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                   <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button> 
                </div>
            </form>
            <a href="/campgrounds">Go back</a>           
        </div>

    </div>
    
    



<% include ../partials/footer %>