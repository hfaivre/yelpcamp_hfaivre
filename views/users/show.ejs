<% include ../partials/header %>

	<div class="row">
       <div class="col-md-6 ">

        <div class="panel panel-default">
          <div class="panel-heading">  <h4><%= user.username%>'s Profile</h4></div>
           <div class="panel-body">
            <div class="box box-info">
                <div class="box-body">
                    <div class="col-sm-6">
                        <div  align="center"> 
                            <img alt="User Pic" src="https://x1.xingassets.com/assets/frontend_minified/img/users/nobody_m.original.jpg" id="profile-image1" class="img-circle img-responsive"> 
                        </div>
                        <br>
                      <!-- /input-group -->
                    </div>
                    <div class="clearfix"></div>
                    <hr style="margin:5px 0 5px 0;">
                    <div class="col-sm-5 col-xs-6 tital " >First Name:</div>
                    <div class="col-sm-7 col-xs-6 "><%= user.firstName%></div>
                    <div class="clearfix"></div>
                    <div class="bot-border"></div>
        
        
                    <div class="col-sm-5 col-xs-6 tital " >Last Name:</div>
                    <div class="col-sm-7"><%= user.lastName%></div>
                    <div class="clearfix"></div>
                    <div class="bot-border"></div>
                    
                    <div class="col-sm-5 col-xs-6 tital " >E-mail:</div>
                    <div class="col-sm-7"><%= user.email%></div>
                    <div class="clearfix"></div>
                    <div class="bot-border"></div>
                    <!-- /.box-body -->
                  </div>
                  <!-- /.box -->
                </div>
            </div> 
            </div>
        </div>  

 
       <div class="col-md-6">
		<h3><%= user.username %>'s campgrounds:</h3>
		<ul>
		<% campgrounds.forEach(function(campground) { %>
			<li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
		<% }); %>
		</ul>
	</div>        
   </div>


<% include ../partials/footer %>